{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [{
            "name": "flaskapp",
            "image": "agustinmag/flask-client",
            "hostname": "flask",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "agustinmag/flask-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [{
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": ["flaskapp"],
            "memory": 128
        }
    ]
}