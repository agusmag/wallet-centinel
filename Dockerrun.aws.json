{
    "AWSEBDockerrunVersion": 2,
    "volumes": [{
        "name": "cert",
        "host": {
            "sourcePath": "/etc/letsencrypt/live/mywalletsentinel.com"
        }
    }],
    "containerDefinitions": [{
            "name": "flaskapp",
            "image": "agustinmag/flask-client",
            "hostname": "flask",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "agustinmag/flask-nginx",
            "hostname": "nginx",
            "memory": 128,
            "essential": true,
            "portMappings": [{
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": ["flaskapp"],
            "mountPoints": [{
                "sourceVolume": "cert",
                "containerPath": "/etc/nginx/ssl",
                "readOnly": true
            }]
        }
    ]
}