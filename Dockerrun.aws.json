{
    "AWSEBDockerrunVersion": 2,
    "volumes": [{
            "name": "html",
            "host": {
                "sourcePath": "/usr/share/nginx/html"
            }
        },
        {
            "name": "letsenctrypt_cert",
            "host": {
                "sourcePath": "/etc/letsencrypt/live/"
            }
        }
    ],
    "containerDefinitions": [{
            "name": "flaskapp",
            "image": "agustinmag/flask-client",
            "hostname": "flask",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "agustinmag/flask-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [{
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "mountPoints": [{
                    "sourceVolume": "html",
                    "containerPath": "/usr/share/nginx/html"
                },
                {
                    "sourceVolume": "letsenctrypt_cert",
                    "containerPath": "/"
                }
            ],
            "links": ["flaskapp"],
            "memory": 128
        }
    ]
}